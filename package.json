{
  "name": "@seymour/server",
  "version": "0.1.1",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "heroku-postbuild": "yarn build",
    "start": "node lib/server.js",
    "test": "NODE_ENV=test jest",
    "lint": "tslint -p .",
    "posttest": "yarn lint",
    "fresh": "yarn clean && yarn lint && yarn build",
    "clean": "rm -rf lib"
  },
  "keywords": [],
  "author": "David Brownman <beamneocube@gmail.com> (https://davidbrownman.com)",
  "license": "ISC",
  "files": [
    "./lib"
  ],
  "dependencies": {
    "@postlight/mercury-parser": "2.0.0",
    "@slack/client": "4.8.0",
    "dotenv": "6.1.0",
    "got": "9.3.2",
    "lodash": "4.17.11",
    "raw-body": "2.3.3",
    "striptags": "3.1.1",
    "url-parse": "1.4.4"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.1",
    "@types/got": "9.2.0",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.24",
    "@types/url-parse": "1.4.1",
    "jest": "^23.5.0",
    "nodemon": "^1.12.1",
    "prettier": "1.16.4",
    "ts-jest": "^23.1.3",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "3.1.6"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "lib"
    ],
    "delay": 2,
    "exec": "node -r dotenv/config lib/server.js"
  }
}
